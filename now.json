{
  "name": "topics-voting-app",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(js|css|img)/.*",
      "headers": { "cache-control": "max-age=31536000, immutable" }
    },
    { "src": "/subscribe", "dest": "/api/campaign-monitor.subscribe.js", "methods": ["POST", "OPTIONS"] },
    { "handle": "filesystem" },
    { "src": ".*", "dest": "/" }
  ],
  "env": {
    "CM_API_KEY": "@campain-monitor-api-key"
  }
}
